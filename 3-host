# shellcheck shell=ksh disable=SC1090,SC2086,SC2231
# vim: syntax=sh et ts=2 sw=2 sts=2

# Load operating-system specific
# configuration files.
load_host_rc ()
{
  rcdir=~/.shrc.d/host/$(uname -s)
  if [ -d $rcdir ]; then
    for p in $rcdir/*; do
      [[ -f $p ]] && source $p; done
  fi
  unset rcdir
}; load_host_rc
unset -f load_host_rc
